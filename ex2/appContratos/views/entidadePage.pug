extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1
        span Entidade

    .w3-container
      h2 Dados entidade: 
        span= entidade.nipc_nome

      if entidade
        ul
          li
            b NIPC: 
            span= entidade.nipc
            
          li
            b Valor total dos contratos: 
            span= entidade.valorTotal
        h2 Lista de Contratos
        if entidade.contratos.length
          table.w3-table-all
            thead
              tr
                th ID Contrato
                th Número Anúncio
                th Tipo Procedimento
                th Objecto Contrato
                th Data Publicação
                th Data de Celebração Contrato
                th Valor Contrato
                th Fundamentação
                
            tbody
              each contrato in entidade.contratos
                tr
                  td= contrato._id
                  td= contrato.nAnuncio
                  td= contrato.tipoprocedimento
                  td= contrato.objectoContrato
                  td= contrato.dataPublicacao
                  td= contrato.dataCelebracaoContrato
                  td= contrato.precoContratual
                  td= contrato.fundamentacao
        else
          p Esta entidade não tem contratos

    footer.w3-container.w3-teal
        address 
            span Gerado para o teste de 2024 ENGWEB - [
            a(href="/") Voltar
            span ]
